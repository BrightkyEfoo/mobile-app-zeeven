{
  "expo": {
    "name": "mobile-app-zeeven",
    "slug": "mobile-app-zeeven",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/zeeven.png",
      "resizeMode": "contain",
      "backgroundColor": "#041d3f"
    },
    "plugins": [
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Autorisez ZEEVEN à accéder à votre caméra",
          "photosPermission": "Autorisez ZEEVEN à accéder à votre appareil photo"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Autorisez ZEEVEN à accéder à votre caméra",
          "photosPermission": "Autorisez ZEEVEN à accéder à votre appareil photo"
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Autorisez ZEEVEN à accéder à votre caméra",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "chillo.mobillezeeven"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "c6ccec93-e18c-4af7-92b7-3b797438fd24"
      }
    }
  }
}
